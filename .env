# Quantum-Safe Messenger Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://localhost:5432/quantum_safe_messenger
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quantum_safe_messenger
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-32-chars-minimum
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this-too
REFRESH_TOKEN_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development
HOST=localhost

# Security Configuration
ENCRYPTION_KEY=your-32-byte-encryption-key-for-message-encryption
HMAC_SECRET=your-hmac-secret-for-message-authentication
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Push Notification Configuration
VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here
VAPID_EMAIL=admin@yourdomain.com

# Email Configuration (for verification/notifications)
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@domain.com
EMAIL_PASS=your-email-password

# Redis Configuration (for caching/session management)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_ENDPOINT=https://your-analytics-service.com

# Third-party API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
CLOUD_STORAGE_BUCKET=your-cloud-storage-bucket

# Development Configuration
DEV_MODE=true
DEBUG_DATABASE_QUERIES=true
SHOW_STACK_TRACES=true

# Production Configuration (override in production)
# NODE_ENV=production
# LOG_LEVEL=error
# DEV_MODE=false
# DEBUG_DATABASE_QUERIES=false
# SHOW_STACK_TRACES=false

# Security Headers
HELMET_ENABLED=true
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# SSL Configuration (for HTTPS)
SSL_ENABLED=false
SSL_CERT_PATH=./certs/certificate.crt
SSL_KEY_PATH=./certs/private.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=./backups

# Monitoring Configuration
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENABLED=true
METRICS_ENDPOINT=/metrics

# Honeypot Configuration
HONEYPOT_ENABLED=true
HONEYPOT_THRESHOLD=5
HONEYPOT_BLOCK_DURATION=3600000

# WebSocket Configuration
WEBSOCKET_PING_INTERVAL=30000
WEBSOCKET_TIMEOUT=60000
MAX_CONNECTIONS_PER_USER=5

# Message Configuration
MAX_MESSAGE_LENGTH=5000
MESSAGE_RETENTION_DAYS=365
ENCRYPTION_ALGORITHM=AES-256-GCM

# User Configuration
MAX_CONTACTS_PER_USER=1000
MAX_DEVICES_PER_USER=10
SESSION_TIMEOUT=86400000